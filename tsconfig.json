{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true, /* Create source map files for emitted JavaScript files. */
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "alwaysStrict": true
  },
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}